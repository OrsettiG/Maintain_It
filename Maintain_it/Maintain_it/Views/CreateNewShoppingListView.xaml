<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Maintain_it.ViewModels"
             xmlns:fontawesome="clr-namespace:Maintain_it.Helpers.FontAwesome"
             x:Class="Maintain_it.Views.CreateNewShoppingListView"
             Title="New Shopping List">
    <ContentPage.BindingContext>
        <viewmodels:CreateNewShoppingListViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Command="{Binding SaveCommand}"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <ScrollView BackgroundColor="Gray"
                        Padding="1,1,1,5"
                        Grid.ColumnSpan="2"
                        Grid.RowSpan="2">
                <Frame BackgroundColor="LightGray"
                       Padding="5"
                       Margin="5"
                       CornerRadius="5">
                    <StackLayout>
                        <Entry Text="{Binding Name}"
                       FontSize="Title"
                       IsSpellCheckEnabled="True"
                       Placeholder="My New Shopping List"
                       HorizontalOptions="FillAndExpand"
                       Margin="5,2"
                       MaxLength="50"/>


                        <CollectionView ItemsSource="{Binding ShoppingListMaterials}">
                            <CollectionView.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Label Text="Name"
                                           FontSize="Medium"
                                           Grid.Column="0"/>
                                    <Label Text="Quantity Required" 
                                           FontSize="Medium"
                                           Grid.Column="1" Grid.ColumnSpan="2"/>
                                </Grid>
                            </CollectionView.Header>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid HeightRequest="50">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.GestureRecognizers>
                                            <SwipeGestureRecognizer Direction="Right"
                                                                    CommandParameter="Right"
                                                                    Command="{Binding CrossOffCommand}"/>
                                            <SwipeGestureRecognizer Direction="Left"
                                                                    CommandParameter="Left"
                                                                    Command="{Binding UnCrossCommand}"/>
                                            <TapGestureRecognizer Command="{Binding OpenCommand}"/>
                                        </Grid.GestureRecognizers>
                                        <!--<CheckBox IsChecked="{Binding Purchased}"/>-->
                                        <Label Text="{Binding Name}" 
                                               TextDecorations="{Binding TextDecoration}"/>
                                        
                                        <Label Text="{Binding Quantity}" 
                                               TextDecorations="{Binding TextDecoration}"
                                               Grid.Column="1"
                                               HorizontalOptions="Center"/>

                                        <Label Text="{Static fontawesome:FontAwesomeIcons.AngleRight}" 
                                               FontFamily="FA-Solid"
                                               Grid.Column="2"
                                               HorizontalOptions="End"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </Frame>
            </ScrollView>
            
            <Button Text="{Static fontawesome:FontAwesomeIcons.Plus}"
                    FontFamily="FA-Solid"
                    FontSize="24"
                    Margin="10"
                    CornerRadius="45"
                    Command="{Binding AddShoppingListMaterialsCommand}"
                    Grid.Column="1"
                    Grid.Row="1"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>