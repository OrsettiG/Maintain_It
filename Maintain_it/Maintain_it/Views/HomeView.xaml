<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:viewmodel="clr-namespace:Maintain_it.ViewModels" 
             xmlns:fontAwesome="clr-namespace:Maintain_it.Helpers.FontAwesome"
             x:Class="Maintain_it.Views.HomeView"
             Title="Home">
    <ContentPage.BindingContext>
        <viewmodel:HomeViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Maintain It!" 
                       FontSize="32" 
                       HorizontalOptions="CenterAndExpand"
                       TextColor="Black"
                       Padding="5"/>
            <BoxView BackgroundColor="LightGray" 
                         WidthRequest="600" HeightRequest="1"
                         HorizontalOptions="CenterAndExpand" VerticalOptions="Start"/>
            <StackLayout x:DataType="viewmodel:HomeViewModel">
                <Label Text="Upcoming Maintenance" 
                                    FontSize="Medium" TextDecorations="Underline" 
                                    HorizontalOptions="Center" VerticalOptions="Start" 
                                    HeightRequest="35"/>
                <CollectionView x:Name="Items" 
                                    ItemsSource="{Binding DisplayedMaintenanceItems}"
                                    VerticalOptions="Start" HorizontalOptions="CenterAndExpand" 
                                    Margin="10"
                                    HeightRequest="400"
                                    BackgroundColor="White">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal" ItemSpacing="15" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="{x:Type viewmodel:MaintenanceItemViewModel}">
                            <Frame BorderColor="Gray" WidthRequest="350">
                                <Grid Padding="5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="200"/>
                                        <RowDefinition Height="100"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!--Edit-->
                                    <Button   Text="{Static fontAwesome:FontAwesomeIcons.PencilAlt}"
                                              FontFamily="FA-Solid" TextColor="DarkRed"
                                              CornerRadius="20" HeightRequest="40" WidthRequest="40"
                                              Grid.Column="3" Grid.Row="0" 
                                              HorizontalOptions="Center" VerticalOptions="Center"
                                              BackgroundColor="LightGray"
                                              Command="{Binding EditCommand}"
                                              />
                                    <!--Delete-->
                                    <Button   Text="{Static fontAwesome:FontAwesomeIcons.TrashAlt}"
                                              FontFamily="FA-Solid" TextColor="DarkRed"
                                              CornerRadius="20" HeightRequest="40" WidthRequest="40"
                                              Grid.Column="0" Grid.Row="0" 
                                              HorizontalOptions="Center" VerticalOptions="Center"
                                              BackgroundColor="LightGray"
                                              Command="{Binding DeleteCommand}"
                                              />
                                    <!--Name-->
                                    <Label  Text="{Binding Name}"
                                            FontSize="Medium" HorizontalTextAlignment="Center"
                                            Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" 
                                            HorizontalOptions="CenterAndExpand" VerticalOptions="Center"
                                            />
                                    
                                    <Label Text="Next Service Date:" Padding="0, 5"
                                           Grid.Row="1" Grid.Column="1" 
                                           HorizontalOptions="CenterAndExpand" VerticalOptions="Center" 
                                           />
                                    
                                    <Label Text="{Binding NextServiceDate, StringFormat='{0:MMM dd, yyyy}'}" Padding="0, 5"
                                           Grid.Row="1" Grid.Column="2" 
                                           HorizontalOptions="Start" VerticalOptions="Center" 
                                           />

                                    <!--Step Column Headers-->

                                    <Grid Grid.Row="2" Grid.ColumnSpan="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="0.5*"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <Label Grid.Column="0" Text="Step Name" FontSize="Subtitle" TextDecorations="Underline" HorizontalOptions="StartAndExpand" Padding="25,0,0,0"/>
                                        <Label Grid.Column="2" Text="Step Description" FontSize="Subtitle" TextDecorations="Underline" HorizontalOptions="StartAndExpand"/>
                                    </Grid>

                                    <!--Step CollectionView-->
                                    <CollectionView ItemsSource="{Binding StepViewModels, Mode=OneWay}" 
                                                    ItemSizingStrategy="MeasureFirstItem" 
                                                    HorizontalOptions="Center" 
                                                    VerticalOptions="Start" 
                                                    Margin="0, 5" 
                                                    BackgroundColor="White"  
                                                    Grid.Row="3" Grid.ColumnSpan="4">
                                        <CollectionView.ItemsLayout>
                                            <GridItemsLayout 
                                                Orientation="Horizontal" 
                                                Span="5" 
                                                HorizontalItemSpacing="0" 
                                                SnapPointsType="MandatorySingle" 
                                                SnapPointsAlignment="Start" 
                                                BindingContext="{Binding StepViewModels}"/>
                                        </CollectionView.ItemsLayout>

                                        <CollectionView.ItemTemplate>
                                            <DataTemplate x:DataType="{x:Type viewmodel:StepViewModel}">
                                                <Grid HeightRequest="40">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="40"/>
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="35"/>
                                                        <ColumnDefinition Width="35"/>
                                                        <ColumnDefinition Width="175"/>
                                                        <ColumnDefinition Width="75"/>
                                                        <ColumnDefinition Width="80"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Label Grid.Column="2" Text="{Binding Name}" HorizontalOptions="Start" VerticalOptions="Center" Margin="5" BackgroundColor="Aquamarine"/>
                                                    <Label Grid.Column="3" Text="{Binding NextStep.Id}" VerticalOptions="Center" HorizontalOptions="Center"/>
                                                </Grid>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>

                                    <!--Add to Shopping list Button-->
                                    <!--<Label Text="Add to Shopping List"
                                           Grid.Row="4" Grid.Column="3"
                                           VerticalOptions="Start"
                                           WidthRequest="60"/>-->
                                    <Button 
                                        Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" 
                                        Text="{Static fontAwesome:FontAwesomeIcons.CartPlus}" 
                                        FontFamily="FA-Solid" TextColor="Green"
                                        Command="{Binding AddMaterialsToShoppingCartCommand}"
                                        VerticalOptions="Start" HorizontalOptions="FillAndExpand" 
                                        BackgroundColor="LightGray" HeightRequest="45"/>
                                    
                                    <!--Start Maintenance Button-->
                                    <Button 
                                        Grid.Row="4" Grid.Column="0"  Grid.ColumnSpan="4" 
                                        Text="Start Maintenance"
                                        Command="{Binding StartMaintenanceCommand}"
                                        VerticalOptions="End" HorizontalOptions="FillAndExpand" 
                                        BackgroundColor="Green"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <BoxView BackgroundColor="Black" HorizontalOptions="CenterAndExpand" HeightRequest="1" WidthRequest="350"/>
            </StackLayout>
            <Grid Margin="5" Padding="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Text="Add New" Command="{Binding AddCommand}" HorizontalOptions="Center" HeightRequest="50"/>
                <Button Grid.Column="1" Text="Refresh" Command="{Binding RefreshCommand}" HorizontalOptions="Center"/>
                <Button Grid.Column="2" Text="Delete All" Command="{Binding DeleteAllCommand}" HorizontalOptions="Center"/>
                <Button Grid.Column="3" Text="Update All" Command="{Binding UpdateCommand}" HorizontalOptions="Center"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>