                                        <ColumnDefinition Width="0.5*"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <Label Grid.Column="0" Text="Material Name" FontSize="Subtitle" TextDecorations="Underline" HorizontalOptions="StartAndExpand" Padding="25,0,0,0"/>
                                    <Label Grid.Column="2" Text="Quantity Needed" FontSize="Subtitle" TextDecorations="Underline" HorizontalOptions="StartAndExpand"/>
                                </Grid>
                                <!--Materials CollectionView-->
                                <CollectionView ItemsSource="{Binding MaterialsAndEquipment, Mode=TwoWay}" ItemSizingStrategy="MeasureAllItems" HorizontalOptions="Center" VerticalOptions="Start" Margin="0, 5" BackgroundColor="White"  Grid.Row="2" Grid.ColumnSpan="3">
                                    <CollectionView.ItemsLayout>
                                        <GridItemsLayout Orientation="Horizontal" Span="5" HorizontalItemSpacing="0" SnapPointsType="MandatorySingle" SnapPointsAlignment="Start"/>
                                    </CollectionView.ItemsLayout>

                                    <CollectionView.ItemTemplate>
                                        <DataTemplate x:DataType="models:Material">
