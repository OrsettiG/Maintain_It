                <CollectionView x:Name="Items" ItemsSource="{Binding MaintenanceItems, Mode=TwoWay}" VerticalOptions="Start" HorizontalOptions="CenterAndExpand" Margin="10" BackgroundColor="#f1f1f1f1">
                    <CollectionView.Header>
                        <StackLayout>
                            <Label Text="Upcoming Maintenance" FontSize="Medium" TextDecorations="Underline" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="35"/>
                        </StackLayout>
                    </CollectionView.Header>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="200"/>
                                    <RowDefinition Height="100"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="35"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox x:Name="IsComplete" Grid.Column="0" Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center" IsChecked="{Binding IsComplete}"/>
                                <Label Grid.Row="0" Grid.Column="1" FontSize="Medium" HorizontalOptions="StartAndExpand" VerticalOptions="Center" Text="{Binding Name}"/>
                                <Label Grid.Row="0" Grid.Column="2" HorizontalOptions="End" VerticalOptions="Center" Text="{Binding NextServiceDate, StringFormat='{0:MMM dd, yyyy}'}" Padding="0, 5"/>
                                <Label Grid.Row="0" Grid.Column="1" HorizontalOptions="End" VerticalOptions="Center" Text="Service Date:" Padding="0, 5"/>


