                        </CollectionView>
                    </StackLayout>
                </Frame>-->
            </StackLayout>

            <Button Text="{Static fontawesome:FontAwesomeIcons.Plus}"
                    FontFamily="FA-Solid" FontSize="Large"
                    Grid.Row="1"
                    HorizontalOptions="End"
                    VerticalOptions="End"
                    Command="{Binding AddRemoveItemsCommand}"
                    IsVisible="{Binding IsEditing}"
                    CornerRadius="45"
                    WidthRequest="90"
                    HeightRequest="90"
                    Margin="10"/>

        </Grid>
    </ContentPage.Content>
</ContentPage>