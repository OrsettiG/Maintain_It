<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Maintain_it.ViewModels"
             xmlns:fontawesome="clr-namespace:Maintain_it.Helpers.FontAwesome"
             x:Class="Maintain_it.Views.ShoppingListDetailView"
             Title="{Binding Name}">
    <ContentPage.BindingContext>
        <viewmodels:ShoppingListViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="{FontImage Glyph={Static fontawesome:FontAwesomeIcons.PencilAlt},
                                                 FontFamily=FA-Solid,
                                                 Size=Medium}"
                                                 Command="{Binding EditShoppingListMaterialsCommand}"/>
    </ContentPage.ToolbarItems>
    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding SaveAndGoBackCommand}"/>
    </Shell.BackButtonBehavior>
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackLayout Grid.RowSpan="2">
                <Frame  Margin="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Label Text="Remaining Items:" 
                           FontSize="Medium"
                           Grid.Column="1"
                           Grid.ColumnSpan="2"/>
                        <Label Text="{Binding RemainingItemsCount}" 
                           FontSize="Medium"
                           Grid.Column="2"
                           HorizontalOptions="End"/>

                        <Line HeightRequest="1" 
                              Grid.Column="0"
                              Grid.Row="1"
                              BackgroundColor="{StaticResource Secondary}"
                              VerticalOptions="Center"/>


                        <Label HorizontalOptions="Center"
                               VerticalOptions="Center"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"
                               Grid.Column="1"
                               Grid.ColumnSpan="2"
                               Grid.Row="1"
                               WidthRequest="100"
                               HeightRequest="25">
                            <Label.Text>
                                <MultiBinding StringFormat="Completed {0}/{1}">
                                    <Binding Path="RemainingProjectsCount"/>
                                    <Binding Path="GroupedMaterials.Count"/>
                                </MultiBinding>
                            </Label.Text>
                        </Label>

                        <Line HeightRequest="1" 
                              Grid.Column="3"
                              Grid.Row="1"
                              BackgroundColor="{StaticResource Secondary}"
                              VerticalOptions="Center"/>
                    </Grid>
                </Frame>

                <StackLayout>
                    <CollectionView ItemsSource="{Binding GroupedMaterials}" 
                                    Margin="10"
                                    IsGrouped="true"
                                    EmptyView="No Projects Currently Require Materials"
                                    
                                    >
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Vertical" 
                                               ItemSpacing="4"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="7*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="5"/>
                                </Grid.RowDefinitions>
                                <Label Text="Name" FontSize="Medium"
                                       Grid.Column="1"
                                       HorizontalOptions="Start"/>
                                <Label Text="Quantity" FontSize="Medium"
                                       Grid.Column="1" Grid.ColumnSpan="2"
                                       HorizontalOptions="End"/>
                                <Line HeightRequest="1" 
                                      Grid.Column="0" Grid.ColumnSpan="4"
                                      Grid.Row="1"
                                      BackgroundColor="{StaticResource Secondary}"
                                      VerticalOptions="Center"/>
                            </Grid>
                        </CollectionView.Header>
                        <CollectionView.GroupHeaderTemplate>
                            <DataTemplate>
                                <SwipeView Threshold="100">
                                    <SwipeView.LeftItems>
                                        <SwipeItems Mode="Execute">
                                            <SwipeItem
                                                Command="{Binding PurchaseAllItemsCommand}"
                                                IsDestructive="False"
                                                IconImageSource="{FontImageSource Glyph={
                                                Static fontawesome:FontAwesomeIcons.CheckSquare},
                                                FontFamily=FA-Solid}"
                                                BackgroundColor="{StaticResource Cue}"/>
                                        </SwipeItems>
                                    </SwipeView.LeftItems>
                                    <Frame Padding="3" 
                                       Margin="5"
                                       BackgroundColor="{StaticResource Primary}"
                                       HeightRequest="50">
                                        <Label Text="{Binding DisplayName}"
                                           HeightRequest="25"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           FontSize="Medium"/>
                                    </Frame>
                                </SwipeView>
                            </DataTemplate>
                        </CollectionView.GroupHeaderTemplate>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <SwipeView Padding="2" 
                                           Threshold="100">
                                    <SwipeView.RightItems>
                                        <SwipeItems>
                                            <SwipeItem 
                                                Command="{Binding DeleteCommand}"
                                                IsDestructive="True"
                                                IconImageSource="{FontImage Glyph=
                                               {
                                                   Static fontawesome:FontAwesomeIcons.Trash
                                               },
                                               FontFamily=FA-Solid}"
                                               BackgroundColor="DarkRed" 
                                               />
                                            <!--IsVisible="{Binding CanEdit}"-->
                                        </SwipeItems>
                                    </SwipeView.RightItems>
                                    <SwipeView.LeftItems>
                                        <SwipeItems Mode="Execute">
                                            <SwipeItem
                                                Command="{Binding TogglePurchasedCommand}"
                                                IsDestructive="False"
                                                IconImageSource="{FontImageSource Glyph={
                                                Static fontawesome:FontAwesomeIcons.CheckSquare},
                                                FontFamily=FA-Solid}"
                                                BackgroundColor="{StaticResource Cue}"/>
                                        </SwipeItems>
                                    </SwipeView.LeftItems>
                                    <Frame Padding="0,10,5,10"
                                           Margin="25,2,2,2"
                                           BorderColor="{Binding Color}" 
                                           HeightRequest="45">
                                        <Grid>
                                            <Grid.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding OpenCommand}"/>
                                            </Grid.GestureRecognizers>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="10"/>
                                                <ColumnDefinition Width="7*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <Label Text="{Binding Name}"
                                                   FontSize="Medium"
                                                   Grid.Column="1"
                                                   TextDecorations="{Binding TextDecoration}"
                                                   HorizontalOptions="FillAndExpand"
                                                   VerticalOptions="CenterAndExpand"/>
                                            <Label Text="{Binding Quantity}"
                                                   FontSize="Medium"
                                                   Grid.Column="2"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="CenterAndExpand"/>
                                            <Label Text="{Static fontawesome:FontAwesomeIcons.AngleRight}"
                                                   FontSize="Medium"
                                                   FontFamily="FA-Solid" 
                                                   VerticalOptions="Center"
                                                   Grid.Column="3"
                                                   HorizontalOptions="End"/>
                                        </Grid>
                                    </Frame>
                                </SwipeView>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
