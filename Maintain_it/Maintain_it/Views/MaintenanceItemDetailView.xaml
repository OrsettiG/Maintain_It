<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:viewmodels="clr-namespace:Maintain_it.ViewModels" 
             x:DataType="viewmodels:MaintenanceItemViewModel"
             x:Class="Maintain_it.Views.MaintenanceItemDetailView">
    <ContentPage.BindingContext>
        <viewmodels:MaintenanceItemViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout x:DataType="viewmodels:MaintenanceItemViewModel">

            <Entry Text="{Binding Name}" MaxLength="30" VerticalOptions="Start" HorizontalOptions="CenterAndExpand" MinimumWidthRequest="300"/>

            <ScrollView Margin="10" Orientation="Vertical" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                <Grid Padding="3">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Comment Label and Entry -->
                    <Label Text="Comment:" Grid.Column="0" Grid.Row="0"/>
                    <Entry Text="{Binding Comment}" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0" MaxLength="150"/>

                    <!-- First Service Date Label and Picker -->
                    <Label Text="First Service Date:" Grid.Column="0" Grid.Row="1"/>
                    <DatePicker Date="{Binding FirstServiceDate}" IsEnabled="True" IsVisible="True" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1"/>

                    <!-- Next Service Date Label and Picker -->
                    <Label Text="Next Service Date:" Grid.Column="0" Grid.Row="3" IsVisible="{Binding IsRecurring}"/>
                    <DatePicker Date="{Binding NextServiceDate}" IsEnabled="False" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2"/>

                    <!-- Previous Service Date Label and Picker -->
                    <Label Text="Previous Service Date:" Grid.Column="0" Grid.Row="4" IsVisible="{Binding IsRecurring}"/>
                    <DatePicker Date="{Binding PreviousServiceDate}" IsEnabled="False" IsVisible="{Binding IsRecurring}" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="4"/>

                    <!-- Is Recurring Label and Checkbox -->
                    <Label Text="Is Recurring:" Grid.Column="0" Grid.Row="2"/>
                    <CheckBox IsChecked="{Binding IsRecurring}" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" />

                    <!-- Recurrs Every X Label and Input -->
                    <Label Text="Recurrs Every:" Grid.Column="0" Grid.Row="5" HorizontalOptions="Start"/>
                    <Entry Text="{Binding RecursEvery}" Keyboard="Numeric"
                           Grid.Column="1" Grid.Row="5" 
                           HorizontalOptions="Start" WidthRequest="50" VerticalOptions="Center" 
                           FontSize="Medium" TextColor="Black"/>
                    <Button Text="+" 
                            Grid.Column="2" Grid.Row="5"
                            HorizontalOptions="End" VerticalOptions="Center"
                            HeightRequest="35" WidthRequest="75"
                            Command="{Binding OnIncrementCommand}"/>
                    <Button Text="-" 
                            Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="2"
                            HorizontalOptions="Center" VerticalOptions="Center"
                            HeightRequest="35" WidthRequest="75"
                            Command="{Binding OnDecrementCommand}"/>

                    <Picker Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="6" 
                            HorizontalOptions="StartAndExpand" VerticalOptions="Center" WidthRequest="300"
                            ItemsSource="{Binding Timeframes}" SelectedItem="{Binding Frequency}"/>

                </Grid>
            </ScrollView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>