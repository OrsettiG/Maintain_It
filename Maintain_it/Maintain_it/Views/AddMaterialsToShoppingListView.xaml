<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:Maintain_it.ViewModels"
             x:Class="Maintain_it.Views.AddMaterialsToShoppingListView">
    <ContentPage.BindingContext>
        <viewmodel:AddMaterialsToShoppingListViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <CollectionView ItemsSource="{Binding ShoppingListViewModels}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding ShoppingList.Name}"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="New Shopping List" Command="{Binding CreateNewShoppingListCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>